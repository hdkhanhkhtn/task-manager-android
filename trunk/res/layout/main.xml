<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@android:id/tabhost" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent"    
  >

		<LinearLayout android:orientation="horizontal"
			 android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<TextView android:text="CPU" android:textSize="18dp"
				android:layout_width="50dp" android:layout_height="wrap_content"
				 android:gravity="center"
				android:textStyle="bold" />
			<TextView android:id="@+id/cpu" android:textSize="15dp"
				android:layout_gravity="center_vertical" 
				android:layout_width="wrap_content" android:layout_height="wrap_content" />				
			<TextView android:text="MMR" android:textSize="18dp"
				 android:layout_width="50dp"
				android:layout_height="wrap_content" android:gravity="center"
				android:textStyle="bold" android:layout_marginLeft="10dp"
				
				 />
			<TextView android:id="@+id/memory" android:textSize="15dp"
				android:layout_gravity="center_vertical" 
				android:layout_width="wrap_content" android:layout_height="wrap_content" />				
			<TextView android:text="NET" android:textSize="18dp"
				android:layout_width="50dp" android:layout_height="wrap_content"
				android:textStyle="bold" 
				android:gravity="center" android:layout_marginLeft="10dp"/>
			<TextView android:id="@+id/network" android:textSize="15dp"
				android:layout_gravity="center_vertical"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />


		</LinearLayout>
		<TabWidget android:id="@android:id/tabs"
			android:layout_width="fill_parent" android:layout_height="wrap_content" />
		<FrameLayout android:id="@android:id/tabcontent"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:padding="5dp" />

	</LinearLayout>
</TabHost>